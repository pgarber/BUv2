        <div class="row">
          <% all_attributes = Attribute.all %>
          <% all_attributes.each do |attribute| %>
            <% if attribute.good == 'true' %>
              <div class="col-md-5" align="left">
                <div class="checkbox">
                  <label>
                    <input type="checkbox" value="false"><%= attribute.attribute_name %>
                  </label>
                </div>
              </div>  
              <div class="col-md-7">
                <div class="checkbox">
                  <label>
                    <input type="checkbox" value="false"><%= all_attributes.find(attribute.opposite_id).attribute_name %>
                  </label>
                </div>
              </div>  
            <% end %>  
          <% end %>







